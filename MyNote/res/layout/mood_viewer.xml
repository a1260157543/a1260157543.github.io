<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mood_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00ffcc"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_title_bg"
        layout="@layout/common_title_bg" />

    <LinearLayout
        android:id="@+id/image_data_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/common_title_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mood_view_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/fine" />

        <TextView
            android:id="@+id/mood_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/testTime"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/light_pink" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mood_view_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_data_layout"
        android:layout_marginTop="2dp"
        android:contentDescription="@null"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/mood_view_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mood_view_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="@string/about"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

</RelativeLayout>