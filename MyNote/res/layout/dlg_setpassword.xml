<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="20.0dip"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_margin="20.0dip"
	android:stretchColumns="1"
	>
	<TableRow
		android:id="@+id/setting_tablerow"
		android:layout_width="fill_parent"
		>
		<TextView
			android:id="@+id/setting_password_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="0"
			android:text="@string/setting_input"
			>
		</TextView>
		<EditText
			android:id="@+id/setting_password_edittext"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:inputType="textPassword"
			android:singleLine="true"
			>
		</EditText>
	</TableRow>
	<TableRow
		android:layout_width="fill_parent"
		>
		<TextView
			android:id="@+id/setting_confirm_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="0"
			android:text="@string/setting_confirm"
			>
		</TextView>
		<EditText
			android:id="@+id/setting_confirm_edittext"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:inputType="textPassword"
			android:singleLine="true"
			>
		</EditText>
	</TableRow>
	
</TableLayout>